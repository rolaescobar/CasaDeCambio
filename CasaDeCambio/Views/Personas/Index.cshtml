@@model IEnumerable<CasaDeCambio.Models.Persona>

    @{
        ViewData["Title"] = "Personas";
    }

    <h2>Listado de Personas</h2>

    <form method="get" asp-action="Index">
        <input type="text" name="buscar" value="@Context.Request.Query["buscar"]" placeholder="Buscar por nombre o DPI..." class="form-control mb-3" />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-action="Create" class="btn btn-success ms-2">Nueva Persona</a>
    </form>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>DPI</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.DPI</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.IdPersona" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.IdPersona" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPersona" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
