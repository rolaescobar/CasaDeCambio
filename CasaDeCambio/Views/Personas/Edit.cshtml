@model CasaDeCambio.Models.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<h2>Editar Persona</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdPersona" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"  />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DPI" class="form-label"></label>
        <input asp-for="DPI" class="form-control" />
        <span asp-validation-for="DPI" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}